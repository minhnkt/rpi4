#	/etc/init.d/https-dns-proxy reload
#fi













if [ "$ACTION" = 'ifup' ]; then
	case "$INTERFACE" in
		*"wan"*)
			logger -t "https-dns-proxy" "Reloading https-dns-proxy due to $ACTION of $INTERFACE"
			/etc/init.d/https-dns-proxy reload
		;;
		wan)
			logger -t "https-dns-proxy" "Reloading https-dns-proxy due to $ACTION of $INTERFACE"
			/etc/init.d/https-dns-proxy reload
		;;
	esac
fi



























